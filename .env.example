# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=5000
APP_NAME=memorise
API_PREFIX=/api/v1

# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb://localhost:27017/memorise_dev
MONGODB_URI_TEST=mongodb://localhost:27017/memorise_test

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT
# ============================================
JWT_ACCESS_SECRET=<your_jwt_access_secret>
JWT_REFRESH_SECRET=<your_jwt_refresh_secret>
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=30d
JWT_RESET_PASSWORD_EXPIRATION=10m
JWT_VERIFY_EMAIL_EXPIRATION=24h
JWT_ALGORITHM=HS256
JWT_ISSUER=memorise
JWT_AUDIENCE=memorise-users

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000

# ============================================
# STORAGE (MinIO Local)
# ============================================
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=localhost
STORAGE_PORT=9000
STORAGE_ACCESS_KEY=<your_minio_access_key>
STORAGE_SECRET_KEY=<your_minio_secret_key>
STORAGE_BUCKET=memorise-files
STORAGE_USE_SSL=false

# AWS_ACCESS_KEY_ID=<your_aws_access_key>
# AWS_SECRET_ACCESS_KEY=<your_aws_secret_key>
# AWS_REGION=us-east-1

# ============================================
# AI PROVIDERS 
# ============================================
AI_PROVIDER=gemini
AI_FALLBACK_PROVIDER=groq
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TIMEOUT=15000
AI_TOP_P=0.95
AI_TOP_K=40

GEMINI_API_KEY=<your_gemini_api_key>
GEMINI_MODEL=gemini-2.5-flash
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

GROQ_API_KEY=<your_groq_api_key>
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_BASE_URL=https://api.groq.ai/v1

# ============================================
# EMAIL (Dev SMTP)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=<your_email_user>
EMAIL_PASS=<your_email_app_password>
EMAIL_FROM="Memorise App <no-reply@memorise.app>"

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m
